import Configuration from "./configuration";
{{#if components.schemas}}
  import {
    {{#each components.schemas}}{{@key}}, {{/each}}
  } from "./model";
{{/if}}
import { request } from "./httpVerbs";

// {{info.title}}
{{!-- // {{info.description}} --}}
export default class Api {
  private config: Configuration;

  constructor(config: Configuration) {
    this.config = config;
  }

  {{#each paths}}
  {{setVar "path" @key}}
  {{#each this}}
    
    {{#if summary}}// {{summary}}{{/if}}
    {{#if description}}// {{description}}{{/if}}
    {{#each parameters}}
      // @param {{name}} {{description}}
    {{/each}}
    async {{operationId}}(
      {{#each _sortedParameters}}
        {{name}}{{#if _optional}}?{{/if}}: {{typeConvert schema}}{{#if schema.default}} = "{{schema.default}}"{{/if}},
      {{/each}}
    ): Promise<{{#if _response.schema}}{{typeConvert _response.schema}}{{else}}null{{/if}}> {
      return request(this.config, "{{@root.path}}", "{{@key}}", [
        {{#each _sortedParameters}}
          {
            name: "{{name}}",
            value: {{name}},
            type: "{{in}}"
          },
        {{/each}}
      ]);
    };

  {{/each}}  
  {{/each}}

  {{!-- {{#each paths}}
  {{setVar "path" @key}}
  {{#with post}}
    
    {{#if summary}}// {{summary}}{{/if}}
    {{#if description}}// {{description}}{{/if}}
    {{#each parameters}}
      // @param {{name}} {{description}}
    {{/each}}
    async {{operationId}}(
      value: {{#with (lookup requestBody.content 'application/json')}}{{typeConvert schema}}{{/with}}
    ): Promise<
      {{#if responses.200}}
        {{#with (lookup responses.200.content 'application/json')}}{{typeConvert schema}}{{/with}}
      {{else}}
        {{#with (lookup responses.default.content 'application/json')}}{{typeConvert schema}}{{/with}}
      {{/if}}
      > {
      return post(this.config, "{{@root.path}}", value);
    };
    
  {{/with}}
  {{/each}} --}}
}

